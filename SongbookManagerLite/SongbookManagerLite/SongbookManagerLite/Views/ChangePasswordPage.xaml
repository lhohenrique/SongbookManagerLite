<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SongbookManagerLite.Views.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Alterar senha" FontFamily="Verdana"
                    TextColor="Purple" FontSize="30"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>
            
            <Entry Placeholder="Nova senha" Text="{Binding NewPassword}" IsPassword="True"/>
            <Label Text="{Binding PasswordErrorMessage}" TextColor="Red"/>
            
            <Entry Placeholder="Confirme a senha" Text="{Binding ConfirmNewPassword}" IsPassword="True"/>
            <Label Text="{Binding PasswordErrorMessage}" TextColor="Red"/>

            <Button Text="Alterar Senha" HorizontalOptions="Center" BackgroundColor="Black"
                        TextColor="White" WidthRequest="300" HeightRequest="40" Margin="0,20,0,0"
                        Command="{Binding ChangePasswordCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>