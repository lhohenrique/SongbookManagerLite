<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SongbookManagerLite.Views.ForgotPasswordPage">

    <StackLayout Padding="10" VerticalOptions="Start">
        <ScrollView>
            <StackLayout Spacing="8">
                <Image WidthRequest="150" HeightRequest="150"/>

                <Label Text="Definir nova senha" FontFamily="Verdana"
                    TextColor="Purple" FontSize="30"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>
                
                <Label Text="Uma nova senha de acesso será enviada para o e-mail registrado na conta. Após logar com essa senha você poderá escolher uma nova no seu perfil dentro da aplicação."
                       HorizontalTextAlignment="Center"
                       TextColor="DarkSlateGray" Margin="0,11,0,0"/>
                
                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email"/>

                <Button Text="Resetar Senha" HorizontalOptions="Center" BackgroundColor="Black"
                        TextColor="White" WidthRequest="300" HeightRequest="40" Margin="0,20,0,0"
                        Command="{Binding ResetPasswordCommand}"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>