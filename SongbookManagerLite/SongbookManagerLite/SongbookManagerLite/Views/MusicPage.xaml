<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="MusicsPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SongbookManagerLite.Views.MusicPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Filtro" Order="Primary"/>
        <ToolbarItem Text="+" Order="Primary" Command="{Binding NewMusicCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>

            <StackLayout IsVisible="{Binding IsShowMusicList, Mode=OneWay}" Orientation="Horizontal">
                <SearchBar Placeholder="Pesquisar..." Text="{Binding SearchText, Mode=OneWay}"/>
                <Button Text="Buscar" Command="{Binding SearchCommand}"/>
            </StackLayout>

            <ScrollView IsVisible="{Binding IsAddEditMusic, Mode=OneWay}">
                <StackLayout>
                    <Label Text="{Binding Id}"
                           IsVisible="false"/>

                    <Label Text="Nome"
                        FontSize="12"
                        FontAttributes="Bold"
                        TextColor="DarkSlateGray"></Label>
                    <Entry Text="{Binding Name}"></Entry>

                    <Label Text="Autor"
                        FontSize="12"
                        FontAttributes="Bold"
                        TextColor="DarkSlateGray"></Label>
                    <Entry Text="{Binding Author}"></Entry>

                    <Label Text="Tom"
                        FontSize="12"
                        FontAttributes="Bold"
                        TextColor="DarkSlateGray"></Label>
                    <Picker ItemsSource="{Binding KeyList}" SelectedItem="{Binding SelectedKey}"/>

                    <Label Text="Letra"
                        FontSize="12"
                        FontAttributes="Bold"
                        TextColor="DarkSlateGray"></Label>
                    <Editor Text="{Binding Lyrics}" HeightRequest="100"></Editor>

                    <Label Text="Cifra"
                        FontSize="12"
                        FontAttributes="Bold"
                        TextColor="DarkSlateGray"></Label>
                    <Editor Text="{Binding Chords}" HeightRequest="100"></Editor>

                    <Button Text="Salvar" Command="{Binding SaveMusicCommand}"/>
                    <Button Text="Cancelar" Command="{Binding CancelMusicCommand}"/>
                </StackLayout>
            </ScrollView>

            <RefreshView Command="{Binding UpdateMusicList}"
                         IsVisible="{Binding IsShowMusicList, Mode=OneWay}">
                <ListView x:Name="MusicPageMusicListListView"
                      SeparatorVisibility="None"
                      ItemsSource="{Binding MusicList, Mode=OneWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    <MenuItem Text="Editar"
                                              Command="{Binding Source={x:Reference MusicsPage}, Path=BindingContext.EditMusicCommand}"
                                              CommandParameter="{Binding }"/>
                                    <MenuItem Text="Excluir"
                                              Command="{Binding Source={x:Reference MusicsPage}, Path=BindingContext.RemoveMusicCommand}"
                                              CommandParameter="{Binding }"/>
                                </ViewCell.ContextActions>
                                <StackLayout VerticalOptions="FillAndExpand"
                                         BackgroundColor="White"
                                         Orientation="Vertical"
                                         Spacing="0"
                                         Padding="7"
                                         Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Name}"
                                           FontSize="14"
                                           VerticalOptions="Center"
                                           TextColor="Black"/>
                                        <Label Text="{Binding Key}"
                                           FontSize="14"
                                           VerticalOptions="Center"
                                           TextColor="Black"
                                           Grid.Column="1"/>
                                    </Grid>
                                    <Label Text="{Binding Author}"
                                       FontSize="10"
                                       VerticalOptions="Center"
                                       TextColor="DarkSlateGray"
                                       Margin="0"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>